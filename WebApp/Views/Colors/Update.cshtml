@model Entities.Concrete.Color
@{
    Layout = Layout;
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Renk Güncelle</h4>
            <p class="card-description">
            </p>
            <form class="forms-sample" asp-action="Update" asp-controller="Colors">
                @Html.Hidden("Id",Model.Id)
                <div class="form-group">
                    <label for="exampleInputUsername1">Renk Adı</label>
                    <input type="text" class="form-control" id="ColorName" name="ColorName" value="@Model.ColorName" placeholder="Renk Adı">
                </div>
                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>