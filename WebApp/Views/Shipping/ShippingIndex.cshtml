    function DeleteShipping(e) {
        var spId = e.target.getAttribute('data-id');
        swal({
            title: "Siparişi Silmek istiyor musunuz ?",
            text: "Emin Misiniz?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
            buttons: ["Hayır", "Evet"],
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    url: '@Url.Action("DeleteShipping","Shipping")?ShippinbgId=' + spId,
                    success: function () {
                        swal("", {
                            icon: "success",
                        });
                        window.location.reload();

                    }
                });
            }});

    }
